{
  "name": "mxiv",
  "productName": "mxiv",
  "version": "0.5.0",
  "description": "Media explorer and interactive viewer",
  "main": "src/main.mjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "forge-start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": "rvcalisto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rvcalisto/mxiv.git"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icons/mxiv"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mxiv"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "productName": "MXIV",
              "genericName": "Media Explorer & Interactive Viewer",
              "icon": "src/icons/mxiv.png",
              "categories": [
                "AudioVideo",
                "Audio",
                "Video",
                "Graphics"
              ],
              "recommends" : [
                "7zip",
                "imagemagick"
              ],
              "mimeType": [
                "inode/directory"
              ]
            }
          }
        }
      ]
    }
  },
  "optionalDependencies": {
    "electron-squirrel-startup": "^1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7",
    "@electron-forge/maker-deb": "^7",
    "@electron-forge/maker-squirrel": "^7",
    "@electron-forge/maker-zip": "^7",
    "electron": "^34"
  }
}
